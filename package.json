{
  "name": "sports-ecommerce-api",
  "version": "1.0.0",
  "description": "REST API for sports ecommerce site",
  "main": "index.js",
  "engines": {
    "node": "16.X",
    "npm": "8.X"
  },
  "scripts": {
    "dev": " nodemon --exec babel-node ./src/index",
    "build-babel": "babel -d ./build ./src -s",
    "clean": "rm -rf ./build && mkdir build",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./build/index",
    "test": "set NODE_ENV=test&& mocha --require @babel/register --timeout 10000 --exit",
    "coverage": "nyc npm run test"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "author": "shaban",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cloudinary": "^1.30.0",
    "cors": "^2.8.5",
    "datauri": "^4.1.0",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.20.1",
    "stripe": "^9.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/node": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/register": "^7.18.6",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "dotenv": "^16.0.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "winston": "^3.7.2"
  }
}
